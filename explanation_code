#include <stdio.h>


int stringLength(char string[], int length);

int main(){
    //! showMemory(start=65520)
    
    char string[15] = "Hello World!";
    int length = 0;
    length = stringLength(string, length);
    printf("%s\n", string);
    printf("%d", length);
    
    
    // pointers
    
    char *strPtr = string;
    for(int i=0; i<length; i++){
        printf("%c", *(strPtr+i));
    }
    
    char **pPtr = &strPtr;
    for(int i=0; i<length; i++){
        printf("%c", *(*(pPtr)+i));
    }
    
    // mem alloc
    
    
    return 0;
}

int stringLength(char string[], int length){
    string[0] = 'F';
    while(string[length]!='\0'){
        length++;
    }
    return length;
}
